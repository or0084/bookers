<div class="index">
 <div class="index-book">
  <h1>Books</h1>
   <table>
    <tr>
     <th class="index-item">Title</th>
     <th class="index-item2">Body</th>
     <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
     <td class="index-list"><%= book.title %></td>
     <td class="index-list2"><%= book.body %></td>
     <td class="index-list3"><%= link_to "Show", book_path(book.id) %></td>
     <td class="index-list4"><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td class="index-list5"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure" %></td>
    <% end %>
    </tr>
   </table>
 </div>

<div class="index-new">
 <h2>New book</h2>
  <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
　 <ul>
　  <% @book.errors.full_messages.each do |message| %>
　  <li><%= message %></li>
　  <% end %>
　 </ul>
  <% end %>

  <%= form_with model: @book do |f| %>
  <label>Title</label>
  <p><%= f.text_field :title, :size => "21" %></p>
  <br>
  <label>Body</label>
  <p><%= f.text_area :body, :size => "21" %></p>
  <br>
  <%= f.submit 'Create Book' %>
  <% end %>
</div>

</div>