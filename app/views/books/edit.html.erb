<div class="edit">
 <h1>Editing Book</h1>
 <% if @book.errors.any? %>
 <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
　<ul>
　  <% @book.errors.full_messages.each do |message| %>
　  <li><%= message %></li>
　  <% end %>
　</ul>
 <% end %>

 <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
 <div class="edit-item">
  <h4>Title</h4>
  <%= f.text_field :title, :size => "21" %>
 </div>
 <div class="edit-item2">
  <h4>Body</h4>
  <%= f.text_area :body, :size => "21" %>
 </div>
 <div class="edit-item3">
  <%= f.submit 'Update Book' %>
 </div>
 <% end %>

<p><%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %></p>
</div>